<div class="mt-3 flex">
  <div class="flex space-x-2">
    <%= render 'transactions/search' %>
    <div class="flex">
      <button data-action="click->transactions--index#open_search" class="flex border border-gray-300 p-2 py-1.5 rounded-lg text-sm text-gray-500 items-center justify-center bg-white">
        <%= render 'icons/filter' %>
        <span class="pl-1">Filters</span>
      </button>
    </div>
  </div>
  <div class="ml-auto flex items-center space-x-2 sm:space-x-3">
    <button data-action="click->transactions--index#open_columns_modal" class="flex border border-gray-300 p-2 py-1.5 rounded-lg text-sm text-gray-500 items-center justify-center bg-white">
      <%= render 'icons/columns' %>
    </button>
    <button 
      class='flex p-2 py-1.5 rounded-lg text-sm text-white bg-primary-700 items-center justify-center' 
      data-action_url="<%= suggest_categories_transactions_url(request.params) %>"
      data-action="click->transactions--index#suggest_categories">
      <%= render 'icons/robot' %>
      <span class="pl-1">Suggest Categories</span>
    </button>
    <button data-action="click->transactions--index#open_add_drawer" class="flex p-2 py-1.5 rounded-lg text-sm text-white bg-primary-700 items-center justify-center">
      <%= render 'icons/plus' %>
      <span class="pl-1">Add Transaction</span>
    </button>
    <a href="<%= export_transactions_path(filter: (params[:filter] ? params[:filter].to_unsafe_h : {})) %>" data-turbo-stream class="flex border border-gray-300 p-2 py-1.5 rounded-lg text-sm text-gray-500 items-center justify-center bg-white" type="button">
      <%= render 'icons/export' %>
      <span class="pl-1">Export</span>
    </a>
  </div>
  <%= render "transactions/columns" %>
  <%= render "transactions/new" %>
</div>
