<div class="sm:flex">
  <div class="mb-3 hidden items-center dark:divide-gray-700 sm:mb-0 sm:flex sm:divide-gray-100">
    <%= render 'transactions/search' %>
    <div class="mt-3 flex space-x-1 pl-0 sm:mt-0 sm:pl-2">
      <button data-action="click->transactions--index#open_search" class="flex border border-gray-300 p-2 py-1.5 rounded-lg text-sm text-gray-500 items-center justify-center">
        <%= render 'icons/filter' %>
        <span class="pl-1">Filters</span>
      </button>
    </div>
  </div>
  <div class="ml-auto flex items-center space-x-2 sm:space-x-3">
    <button data-action="click->transactions--index#open_columns_modal" class="flex border border-gray-300 p-2 py-1.5 rounded-lg text-sm text-gray-500 items-center justify-center">
      <%= render 'icons/columns' %>
    </button>
    <button data-action="click->transactions--index#open_search" class="flex p-2 py-1.5 rounded-lg text-sm text-white bg-primary-700 items-center justify-center">
      <%= render 'icons/plus' %>
      <span class="pl-1">Add Transaction</span>
    </button>
    <a href="<%= export_transactions_path(filter: (params[:filter] ? params[:filter].to_unsafe_h : {})) %>" data-turbo-stream class="flex border border-gray-300 p-2 py-1.5 rounded-lg text-sm text-gray-500 items-center justify-center" type="button">
      <%= render 'icons/export' %>
      <span class="pl-1">Export</span>
    </a>
  </div>
  <%= render "transactions/columns" %>
</div>