<div id="categories-page" class="p-2">
  <div class="block items-center justify-between p-4">
    <div class="w-full">
      <div class="mb-4">
        <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl">Your Categories</h1>
      </div>
      <div class="sm:flex">
        <div class="ml-auto flex items-center space-x-2 sm:space-x-3">
          <a class="flex p-2 py-1.5 rounded-lg text-sm text-white bg-primary-700 items-center justify-center" data-turbo-stream href="<%= new_category_path %>">
            <div class="flex items-center gap-x-3"><%= render 'icons/plus' %> Add Category</div>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="relative overflow-x-auto p-4 pt-0">
    <div class="border border-gray-300 rounded-lg overflow-hidden">
      <table class="w-full text-sm text-left rtl:text-right text-gray-500">
        <thead class="text-xs text-white uppercase bg-gray-50">
          <tr>
            <th scope="col" class="p-4 border-blue-gray-100 bg-primary-700">
              <p class="block font-sans text-sm antialiased font-normal leading-none">Name</p>
            </th>
            <th scope="col" class="p-4 border-blue-gray-100 bg-primary-700">
              <p class="block font-sans text-sm antialiased font-normal leading-none">Parent Category</p>
            </th>
            <th scope="col" class="p-4 border-blue-gray-100 bg-primary-700">
              <p class="block font-sans text-sm antialiased font-normal leading-none">Code</p>
            </th>
            <th scope="col" class="p-4 border-blue-gray-100 bg-primary-700"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |c| %>
            <%= render('categories/category_row', c: c, parent_categories: @parent_categories) %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div id="new_category_form"></div>
  </div>
</div>
