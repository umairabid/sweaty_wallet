<div id="account-settings-page">
  <div class="block items-center justify-between border-b border-gray-200 bg-white p-4 sm:flex">
    <div class="mb-1 w-full">
      <div class="mb-4">
        <%= render 'helpers/breadcrumbs', crumbs: [['Manager Account']] %>
        <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl">Manage Account</h1>
      </div>
      <div class="sm:flex">
        <div class="mb-3 hidden items-center sm:mb-0 sm:flex sm:divide-gray-100">
          <!--<%= form_for :filter, url: transactions_path, method: :get do |f| %>
            <%= f.text_field :query, placeholder: 'Search for Rules', class: 'block w-full border disabled:cursor-not-allowed disabled:opacity-50 bg-gray-50 border-gray-300 text-gray-900 rounded-lg p-2.5 text-sm' %>
          <% end %>-->
        </div>
      </div>
    </div>
  </div>
  <div class="px-4 py-6 flex justify-center min-h-screen">
    <div class="w-1/2 p-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 sm:p-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4 my-4" role="alert">
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          </div>
        <% end %>
        <div class="mb-4">
          <%= f.label :avatar, 'Your Profile Picture', class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <%= f.file_field :avatar %>
        </div>
        <div class="mb-4">
          <%= f.label :name, 'Your Name', class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <%= f.text_field :name, autofocus: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5'  %>
        </div>
        <div class="mb-4">
          <%= f.label :email, 'Your Email', class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'name@company.com', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5'  %>
        </div>
        <div class="mb-4">
          <div class="block">
            <%= f.label :password, 'Your New Password', class: 'mb-2 text-sm font-medium text-gray-900' %>
            <i class="text-xs">(leave blank if you don't want to change it)</i>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: '••••••••', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' %>
          <% if @minimum_password_length %>
            <em class="text-xs"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, 'Confirm New Password', class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <%= f.password_field :password_confirmation, autocomplete: "confirm-new-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' %>
        </div>
        <div class="mb-4">
          <div class="block">
            <%= f.label :current_password, 'Current Password', class: 'mb-2 text-sm font-medium text-gray-900' %>
            <i class="text-xs">(we need your current password to confirm your changes)</i>
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' %>
        </div>
        <div class="mb-4">
          <button type="submit" class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 sm:w-auto">Update account</button>
        </div>
      <% end %>
      <!--<h3 class="text-xl">Cancel my account</h3>
      <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>-->
    </div>
  </div>
</div>
