<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen pt:mt-0">
  <a href="/" class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10">
    <%= image_tag("logo.svg", class: 'h-8 mr-3') %>
    <span>SweatyWallet</span>
  </a>
  <!-- Card -->
  <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
    <div class="w-full p-6 sm:p-8">
      <h2 class="mb-3 text-2xl font-bold text-gray-900">
        Forgot your password?
      </h2>
      <p class="text-base font-normal text-gray-500">
        Don't fret! Just type in your email and we will send you a code to reset your password!
      </p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'mt-8 space-y-6' }) do |f| %>
        <div>
          <%= f.label :email, 'Your Email', class: 'block mb-2 text-sm font-medium text-gray-900', required: true %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'name@company.com', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5'  %>
        </div>
        <%= f.submit "Reset password", class: 'w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 sm:w-auto' %>
        <div class="text-sm font-medium text-gray-500">
          Already have a password? <%= link_to "Login here", new_session_path(resource_name), class: 'text-primary-700 hover:underline' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
