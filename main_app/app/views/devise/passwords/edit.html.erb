<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen pt:mt-0">
  <a href="/" class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10">
    <%= image_tag("logo.svg", class: 'h-8 mr-3') %>
    <span>SweatyWallet</span>
  </a>
  <!-- Card -->
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow">
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="text-2xl font-bold text-gray-900">
      Change your password
    </h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'mt-8 space-y-6'}) do |f| %> 
      <%= f.hidden_field :reset_password_token %>    
      <div>
        <%= f.label :password, 'Your Password', class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: '••••••••', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' %>
      </div>
      <div>
        <%= f.label :password_confirmation, 'Confirm Password', class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '••••••••', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' %>
      </div>
      <button type="submit" class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 sm:w-auto">Change my password</button>
      <div class="text-sm font-medium text-gray-500">
        Already have an account?  <%= link_to "Login here", new_session_path(resource_name), class: 'text-primary-700 hover:underline' %>
      </div>
    <% end %>
  </div>
</div>