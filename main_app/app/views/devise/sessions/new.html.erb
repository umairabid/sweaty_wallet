<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen pt:mt-0">
  <a href="/" class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10">
    <%= image_tag("logo.svg", class: 'h-8 mr-3') %>
    <span>SweatyWallet</span>
  </a>
  <!-- Card -->
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow">
    <h2 class="text-2xl font-bold text-gray-900">
      Sign in to platform 
    </h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'mt-8 space-y-6'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.label :email, 'Your Email', class: 'block mb-2 text-sm font-medium text-gray-900', required: true %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'name@company.com', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5'  %>
      </div>
      <div>
        <%= f.label :password, 'Your Password', class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: '••••••••', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' %>
      </div>
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= f.check_box :remember_me, class: 'w-4 h-4 border-gray-300 rounded bg-gray-50' %>
        </div>
        <div class="ml-3 text-sm">
          <%= f.label :remember_me, 'Remember me', html: { class: 'font-medium text-gray-900' } %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Lost Password?", new_password_path(resource_name), class: 'ml-auto text-sm text-primary-700 hover:underline' %>
        <% end %>
      </div>
      <%= f.submit "Login to your account", class: '"w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 sm:w-auto' %>
      <div class="text-sm font-medium text-gray-500">
        Not registered? <%= link_to "Create account", new_registration_path(resource_name), class: 'text-primary-700 hover:underline' %>
      </div>
    <% end %>
  </div>
</div>
